<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="190dp"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:clickable="true"
    android:elevation="4dp"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/popularProductDiscountTextCardId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            app:cardBackgroundColor="#ff22"
            app:cardCornerRadius="6dp">

            <TextView
                android:id="@+id/popularProductDiscountTextId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:padding="3dp"
                android:text="- 25 % OFF"
                android:textColor="@color/colorWhite"
                android:textSize="13sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/popularProductImageId"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:layout_below="@+id/popularProductDiscountTextCardId"
            android:src="@drawable/apple" />

        <TextView
            android:id="@+id/popularProductTitleId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/popularProductImageId"
            android:fontFamily="@font/roboto_regular"
            android:text="Apple"
            android:textSize="16sp"
            android:layout_marginStart="2dp"
            android:textColor="@color/colorBlack" />


        <TextView
            android:id="@+id/popularProductPriceId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/popularProductTitleId"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/roboto_regular"
            android:text="$10.00"
            android:textSize="14sp"
            android:layout_marginStart="2dp"

            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/popularProductDiscountPriceId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/popularProductPriceId"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/_2_00"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#6B6B6B"
           />

        <androidx.cardview.widget.CardView
            android:id="@+id/popularProductWishListCardId"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@+id/popularProductTitleId"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:elevation="0dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp">

            <ImageView
                android:id="@+id/popularProductAddWishListImageId"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="fitXY"
                android:src="@drawable/favorite" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>